@model List<PortfolioProject.EntityLayer.Concrete.Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    string color = "";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            switch(item.Status)
                            {
                                case "Yeni Yazı":
                                    color = "badge badge-danger";
                                    break;
                                case "Yeni Video":
                                    color = "badge badge-Warning";
                                    break;
                                case "Konferans":
                                    color = "badge badge-info";
                                    break; case "Yeni Workshop":
                                    color = "badge badge-success";
                                    break;
                                case "Bootcamp":
                                    color = "badge badge-primary";
                                    break;
                                default:
                                    color = "badge badge-dark";
                                    break;
                            }
                            <tr>
                                <th>@item.ID</th>
                                <td>@item.Title</td>
                                <td>@item.Date.ToString("dd MMMM yyyy")</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.ID" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>