@model PortfolioProject.EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "Duyuru Detay";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-8 offset-lg-2 grid-margin stretch-card">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">📢 Duyuru Detayları</h4>
            <form class="form">
                <div class="form-group mb-3">
                    <label for="id">ID</label>
                    <input type="text" class="form-control" id="id" value="@Model.ID" readonly />
                </div>

                <div class="form-group mb-3">
                    <label for="title">Başlık</label>
                    <input type="text" class="form-control" id="title" value="@Model.Title" readonly />
                </div>

                <div class="form-group mb-3">
                    <label for="status">Durum</label>
                    <input type="text" class="form-control" id="status" value="@Model.Status" readonly />
                </div>

                <div class="form-group mb-3">
                    <label for="content">İçerik</label>
                    <textarea class="form-control" id="content" rows="5" readonly>@Model.Content</textarea>
                </div>

                <div class="text-center mt-4">
                    <a href="/Writer/Default/Index" class="btn btn-outline-primary">
                        <i class="mdi mdi-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
