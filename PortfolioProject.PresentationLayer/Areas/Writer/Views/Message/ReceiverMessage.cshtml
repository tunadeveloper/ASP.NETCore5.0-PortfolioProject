@model List<PortfolioProject.EntityLayer.Concrete.WriterMessage>
@{
    ViewData["Title"] = "Gelen Mesajlar";
    ViewData["Subtitle"] = "Size gelen tüm mesajları görüntüleyin";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row g-4">
    <!-- Header Section -->
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-primary mb-1">
                    <i class="fas fa-inbox me-2"></i>
                    Gelen Mesajlar
                </h2>
                <p class="text-muted mb-0">Toplam @Model.Count mesaj bulundu</p>
            </div>
            <div class="d-flex gap-2">
                <a href="/Writer/Message/CreateMessage" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>
                    Yeni Mesaj
                </a>
                <a href="/Writer/Message/SenderMessage" class="btn btn-outline-secondary">
                    <i class="fas fa-paper-plane me-2"></i>
                    Giden Mesajlar
                </a>
            </div>
        </div>
    </div>

    <!-- Messages List -->
    @if (Model.Any())
    {
        <div class="col-12">
            <div class="row g-3">
                @foreach (var item in Model)
                {
                    <div class="col-lg-6 col-xl-4">
                        <div class="message-card" data-bs-toggle="modal" data-bs-target="#messageModal"
                             data-sender="@item.Sender"
                             data-sendername="@item.SenderName"
                             data-subject="@item.Subject"
                             data-content="@item.Content"
                             data-date="@item.Date.ToString("dd MMMM yyyy")">
                            <div class="message-header">
                                <div class="sender-info">
                                    <div class="sender-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="sender-details">
                                        <h6 class="sender-name mb-1">@item.SenderName</h6>
                                        <small class="text-muted">@item.Sender</small>
                                    </div>
                                </div>
                                <div class="message-date">
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-clock me-1"></i>
                                        @item.Date.ToString("dd MMM")
                                    </span>
                                </div>
                            </div>
                            <div class="message-content">
                                <h6 class="message-subject mb-2">@item.Subject</h6>
                                <p class="message-preview text-muted">
                                    @(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
                                </p>
                            </div>
                            <div class="message-footer">
                                <button class="btn btn-sm btn-outline-primary w-100">
                                    <i class="fas fa-eye me-2"></i>
                                    Mesajı Gör
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="empty-state text-center py-5">
                <div class="empty-icon mb-4">
                    <i class="fas fa-inbox fa-4x text-muted"></i>
                </div>
                <h4 class="text-muted mb-3">Henüz mesaj yok</h4>
                <p class="text-muted mb-4">Gelen kutunuzda henüz mesaj bulunmuyor.</p>
                <a href="/Writer/Message/CreateMessage" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>
                    İlk Mesajınızı Yazın
                </a>
            </div>
        </div>
    }
</div>

<!-- Message Detail Modal -->
<div class="modal fade" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalLabel">
                    <i class="fas fa-envelope me-2"></i>
                    Mesaj Detayları
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Gönderen Adı</label>
                        <div class="form-control-plaintext" id="modalSenderName"></div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Gönderen Email</label>
                        <div class="form-control-plaintext" id="modalSender"></div>
                    </div>
                    <div class="col-12">
                        <label class="form-label fw-bold text-muted">Konu</label>
                        <div class="form-control-plaintext" id="modalSubject"></div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Tarih</label>
                        <div class="form-control-plaintext" id="modalDate"></div>
                    </div>
                    <div class="col-12">
                        <label class="form-label fw-bold text-muted">Mesaj İçeriği</label>
                        <div class="message-content-display" id="modalContent"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <a href="/Writer/Message/CreateMessage" class="btn btn-primary">
                    <i class="fas fa-reply me-2"></i>
                    Yanıtla
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const messageCards = document.querySelectorAll(".message-card");
        const modalSender = document.getElementById("modalSender");
        const modalSenderName = document.getElementById("modalSenderName");
        const modalSubject = document.getElementById("modalSubject");
        const modalContent = document.getElementById("modalContent");
        const modalDate = document.getElementById("modalDate");

        messageCards.forEach(card => {
            card.addEventListener("click", function () {
                modalSender.textContent = this.dataset.sender;
                modalSenderName.textContent = this.dataset.sendername;
                modalSubject.textContent = this.dataset.subject;
                modalContent.textContent = this.dataset.content;
                modalDate.textContent = this.dataset.date;
            });
        });
    });
</script>

<style>
    .message-card {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        border: 2px solid var(--border-color);
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        cursor: pointer;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .message-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
        border-color: var(--primary-color);
    }
    
    .message-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }
    
    .sender-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .sender-avatar {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }
    
    .sender-name {
        color: var(--text-primary);
        font-weight: 600;
        margin: 0;
    }
    
    .message-date .badge {
        font-size: 0.8rem;
        padding: 0.5rem 0.75rem;
        border-radius: 20px;
    }
    
    .message-content {
        flex: 1;
        margin-bottom: 1rem;
    }
    
    .message-subject {
        color: var(--text-primary);
        font-weight: 600;
        margin: 0;
    }
    
    .message-preview {
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
    }
    
    .message-footer {
        margin-top: auto;
    }
    
    .empty-state {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: var(--shadow-md);
    }
    
    .empty-icon {
        color: var(--text-secondary);
    }
    
    .message-content-display {
        background: var(--light-color);
        border: 2px solid var(--border-color);
        border-radius: 15px;
        padding: 1rem;
        min-height: 120px;
        line-height: 1.6;
        color: var(--text-primary);
    }
    
    .modal-content {
        border: none;
        border-radius: 20px;
        box-shadow: var(--shadow-lg);
    }
    
    .modal-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        border-radius: 20px 20px 0 0;
        border: none;
    }
    
    .modal-title {
        font-weight: 600;
    }
    
    .btn-close {
        filter: invert(1);
    }
    
    .form-control-plaintext {
        background: var(--light-color);
        border: 2px solid var(--border-color);
        border-radius: 10px;
        padding: 0.75rem 1rem;
        color: var(--text-primary);
        font-weight: 500;
    }
    
    @@media (max-width: 768px) {
        .message-card {
            margin-bottom: 1rem;
        }
        
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
            align-items: stretch;
        }
    }
</style>
