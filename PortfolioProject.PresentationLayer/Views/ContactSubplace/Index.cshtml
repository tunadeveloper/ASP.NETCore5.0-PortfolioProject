
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model PortfolioProject.EntityLayer.Concrete.Contact


<form method="post" class="form-group">
    <br />   <br />   <br />   <br />
    <input type="hidden" name="ContactID" value="@Model.ContactID" />
    <div class="mb-3">
        <label for="title" class="form-label">Başlık</label>
        <input type="text" class="form-control" id="title" name="Title" value="@Model.Title" required />
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Telefon</label>
        <input type="tel" class="form-control" id="title" name="Phone" value="@Model.Phone" required />
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">E-Posta Adresi</label>
        <input type="email" class="form-control" id="title" name="Email" value="@Model.Email" required />
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Açıklama</label>
        <textarea class="form-control" id="description" name="Description" rows="3" required>@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>



