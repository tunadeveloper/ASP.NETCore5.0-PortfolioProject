@model PortfolioProject.EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "Referans Güncelle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section mb-5" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border-radius: 20px; padding: 40px; color: white;">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1 class="display-4 font-weight-bold mb-3">
                <i class="fas fa-edit-circle mr-3"></i>Referans Güncelle
            </h1>
            <p class="lead mb-0">@Model.ClientName referansının bilgilerini güncelleyin ve portföyünüzü yenileyin</p>
        </div>
        <div class="col-md-4 text-center">
            <div class="hero-icon" style="width: 120px; height: 120px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                <i class="fas fa-user-edit fa-3x"></i>
            </div>
        </div>
    </div>
</div>

<!-- Current Info Banner -->
<div class="current-info-banner mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; padding: 25px; color: white;">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h5 class="mb-2">
                <i class="fas fa-info-circle mr-2"></i>Mevcut Referans Bilgileri
            </h5>
            <p class="mb-0">
                <strong>@Model.ClientName</strong> - <em>@Model.CompanyName</em>
                <span class="badge badge-light ml-3" style="background: rgba(255,255,255,0.2); color: white;">ID: @Model.TestimonialID</span>
            </p>
        </div>
        <div class="col-md-4 text-md-right">
            <a href="/Testimonial/Index/" class="btn btn-outline-light" style="border-radius: 25px; padding: 10px 25px;">
                <i class="fas fa-arrow-left mr-2"></i>Listeye Dön
            </a>
        </div>
    </div>
</div>

<!-- Form Container -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12">
        <div class="form-container" style="background: white; border-radius: 20px; box-shadow: 0 20px 40px rgba(0,0,0,0.1); overflow: hidden;">
            
            <!-- Form Header -->
            <div class="form-header" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); padding: 30px; color: white;">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-2">
                            <i class="fas fa-edit mr-2"></i>Güncellenecek Bilgiler
                        </h3>
                        <p class="mb-0 opacity-75">Aşağıdaki alanları düzenleyerek referansı güncelleyin</p>
                    </div>
                    <div class="col-auto">
                        <div class="update-status" style="background: rgba(255,255,255,0.2); border-radius: 20px; padding: 8px 20px;">
                            <i class="fas fa-clock mr-2"></i>Son Güncelleme: @DateTime.Now.ToString("dd.MM.yyyy")
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Form Body -->
            <div class="form-body" style="padding: 40px;">
                <form method="post">
                    <input type="hidden" name="TestimonialID" value="@Model.TestimonialID" />
                    
                    <!-- Personal Information Section -->
                    <div class="form-section mb-5">
                        <div class="section-header mb-4" style="border-bottom: 3px solid #fa709a; padding-bottom: 15px;">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-user-tie mr-2"></i>Kişisel Bilgiler
                            </h5>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="input-group-custom">
                                    <label for="clientName" class="form-label-custom">
                                        <i class="fas fa-user mr-2 text-info"></i>Müşteri Adı Soyadı
                                    </label>
                                    <input type="text" 
                                           class="form-control-custom" 
                                           id="clientName" 
                                           name="ClientName" 
                                           value="@Model.ClientName"
                                           placeholder="Örn: Ahmet Yılmaz"
                                           required />
                                    <div class="input-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="input-group-custom">
                                    <label for="companyName" class="form-label-custom">
                                        <i class="fas fa-building mr-2 text-success"></i>Şirket/Kurum Adı
                                    </label>
                                    <input type="text" 
                                           class="form-control-custom" 
                                           id="companyName" 
                                           name="CompanyName" 
                                           value="@Model.CompanyName"
                                           placeholder="Örn: ABC Teknoloji Ltd."
                                           required />
                                    <div class="input-icon">
                                        <i class="fas fa-building"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Comment Section -->
                    <div class="form-section mb-5">
                        <div class="section-header mb-4" style="border-bottom: 3px solid #fa709a; padding-bottom: 15px;">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-comment-dots mr-2"></i>Müşteri Yorumu
                            </h5>
                        </div>
                        
                        <div class="input-group-custom">
                            <label for="comment" class="form-label-custom">
                                <i class="fas fa-quote-left mr-2 text-warning"></i>Deneyim ve Memnuniyet
                            </label>
                            <textarea class="form-control-custom" 
                                      id="comment" 
                                      name="Comment" 
                                      rows="6" 
                                      placeholder="Müşterinin hizmetiniz hakkındaki detaylı yorumunu buraya yazın..."
                                      required>@Model.Comment</textarea>
                            <div class="textarea-icon">
                                <i class="fas fa-comment"></i>
                            </div>
                        </div>
                        
                        <div class="comment-stats mt-3" style="background: #f8f9fa; border-radius: 15px; padding: 20px;">
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <div class="stat-item">
                                        <h6 class="text-muted mb-1">Karakter Sayısı</h6>
                                        <span class="badge badge-primary" style="font-size: 16px; padding: 8px 16px;">@Model.Comment.Length</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-item">
                                        <h6 class="text-muted mb-1">Kelime Sayısı</h6>
                                        <span class="badge badge-success" style="font-size: 16px; padding: 8px 16px;">@Model.Comment.Split(' ').Length</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-item">
                                        <h6 class="text-muted mb-1">Satır Sayısı</h6>
                                        <span class="badge badge-info" style="font-size: 16px; padding: 8px 16px;">@Model.Comment.Split('\n').Length</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Image Section -->
                    <div class="form-section mb-5">
                        <div class="section-header mb-4" style="border-bottom: 3px solid #fa709a; padding-bottom: 15px;">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-image mr-2"></i>Profil Görseli
                            </h5>
                        </div>
                        
                        <div class="input-group-custom">
                            <label for="imageUrl" class="form-label-custom">
                                <i class="fas fa-link mr-2 text-danger"></i>Görsel URL Adresi
                            </label>
                            <div class="url-input-container">
                                <input type="url" 
                                       class="form-control-custom" 
                                       id="imageUrl" 
                                       name="ImageUrl" 
                                       value="@Model.ImageUrl"
                                       placeholder="https://example.com/photo.jpg"
                                       required />
                                
                                <!-- Current Image Preview -->
                                <div class="current-image-preview mt-3" style="text-align: center;">
                                    <h6 class="text-muted mb-3">
                                        <i class="fas fa-eye mr-2"></i>Mevcut Görsel
                                    </h6>
                                    <div class="image-container" style="display: inline-block; position: relative;">
                                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                        {
                                            <img src="@Model.ImageUrl" alt="@Model.ClientName" 
                                                 style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover; border: 4px solid #fa709a; box-shadow: 0 5px 15px rgba(0,0,0,0.2);" />
                                        }
                                        else
                                        {
                                            <div style="width: 120px; height: 120px; background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; border: 4px solid #fa709a;">
                                                <i class="fas fa-user fa-2x"></i>
                                            </div>
                                        }
                                        <div class="image-overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(250, 112, 154, 0.8); border-radius: 50%; display: flex; align-items: center; justify-content: center; opacity: 0; transition: opacity 0.3s ease;">
                                            <i class="fas fa-edit fa-2x text-white"></i>
                                        </div>
                                    </div>
                                    <p class="text-muted mt-2 mb-0">@Model.ClientName</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="form-actions" style="border-top: 2px solid #e9ecef; padding-top: 30px;">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <a href="/Testimonial/Index/" class="btn btn-outline-secondary btn-lg" style="border-radius: 25px; padding: 12px 30px; border: 2px solid;">
                                    <i class="fas fa-times mr-2"></i>İptal Et
                                </a>
                            </div>
                            <div class="col-md-4 text-center">
                                <a href="/Testimonial/DeleteTestimonial/@Model.TestimonialID" 
                                   class="btn btn-outline-danger btn-lg" 
                                   style="border-radius: 25px; padding: 12px 30px; border: 2px solid;"
                                   onclick="return confirm('Bu referansı silmek istediğinizden emin misiniz?')">
                                    <i class="fas fa-trash mr-2"></i>Referansı Sil
                                </a>
                            </div>
                            <div class="col-md-4 text-md-right">
                                <button type="submit" class="btn btn-primary btn-lg" style="border-radius: 25px; padding: 12px 40px; background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border: none; box-shadow: 0 5px 15px rgba(79, 172, 254, 0.4);">
                                    <i class="fas fa-save mr-2"></i>Değişiklikleri Kaydet
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.hero-section {
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    animation: float 6s ease-in-out infinite;
}

@@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
}

.current-info-banner {
    position: relative;
    overflow: hidden;
}

.current-info-banner::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 80px;
    height: 80px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    transform: translate(20px, -20px);
}

.form-container {
    transition: all 0.3s ease;
}

.form-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 30px 60px rgba(0,0,0,0.15);
}

.form-header {
    position: relative;
    overflow: hidden;
}

.form-header::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    transform: translate(30px, -30px);
}

.form-section {
    transition: all 0.3s ease;
}

.form-section:hover {
    transform: translateX(5px);
}

.section-header h5 {
    font-weight: 600;
    color: #495057;
}

.input-group-custom {
    position: relative;
    margin-bottom: 20px;
}

.form-label-custom {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #495057;
    font-size: 14px;
}

.form-control-custom {
    width: 100%;
    padding: 15px 20px 15px 50px;
    border: 2px solid #e9ecef;
    border-radius: 15px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #f8f9fa;
}

.form-control-custom:focus {
    outline: none;
    border-color: #4facfe;
    background: white;
    box-shadow: 0 0 0 3px rgba(79, 172, 254, 0.1);
    transform: translateY(-2px);
}

.form-control-custom::placeholder {
    color: #adb5bd;
}

.input-icon {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 18px;
}

.textarea-icon {
    position: absolute;
    left: 15px;
    top: 20px;
    color: #6c757d;
    font-size: 18px;
}

.comment-stats {
    border-left: 4px solid #fa709a;
}

.stat-item {
    transition: all 0.3s ease;
}

.stat-item:hover {
    transform: translateY(-2px);
}

.image-container {
    transition: all 0.3s ease;
}

.image-container:hover .image-overlay {
    opacity: 1;
}

.image-container:hover {
    transform: scale(1.05);
}

.form-actions {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    margin: 0 -40px -40px -40px;
    padding: 30px 40px 40px 40px;
}

.btn {
    transition: all 0.3s ease;
    font-weight: 600;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.update-status {
    font-size: 14px;
    font-weight: 500;
}

@@media (max-width: 768px) {
    .hero-section {
        padding: 30px 20px;
    }
    
    .form-body {
        padding: 30px 20px;
    }
    
    .form-actions {
        margin: 0 -20px -30px -20px;
        padding: 30px 20px 30px 20px;
    }
    
    .current-info-banner {
        padding: 20px;
    }
}
</style>

