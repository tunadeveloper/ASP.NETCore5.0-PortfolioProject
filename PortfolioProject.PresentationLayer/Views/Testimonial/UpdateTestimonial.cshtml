@model PortfolioProject.EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "Referans Güncelle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 mb-0 text-white">
                    <i class="fas fa-edit mr-3"></i>Referans Güncelle
                </h1>
                <p class="text-white-50 mb-0">@Model.ClientName referansının bilgilerini güncelleyin</p>
            </div>
            <div class="col-auto">
                <a href="/Testimonial/Index/" class="btn btn-light btn-lg px-4 py-2" style="border-radius: 12px; font-weight: 600;">
                    <i class="fas fa-arrow-left mr-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Form Card -->
<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
        <div class="card">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 12px 12px 0 0;">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0 text-white">
                            <i class="fas fa-user-edit mr-2"></i>Referans Bilgileri
                        </h3>
                    </div>
                    <div class="col-auto">
                        <span class="badge badge-light badge-pill px-3 py-2" style="font-size: 14px; font-weight: 600;">
                            ID: @Model.TestimonialID
                        </span>
                    </div>
                </div>
            </div>
            
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <input type="hidden" name="TestimonialID" value="@Model.TestimonialID" />
                    
                    <!-- Current Info Display -->
                    <div class="alert alert-info" style="background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%); border: none; border-radius: 12px; color: white;">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-info-circle fa-2x mr-3"></i>
                            <div>
                                <h6 class="mb-1">Mevcut Referans Bilgileri</h6>
                                <p class="mb-0">@Model.ClientName - @Model.CompanyName</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <!-- Ad Soyad -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label for="clientName" class="form-label">
                                    <i class="fas fa-user mr-2 text-primary"></i>Ad Soyad
                                </label>
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       id="clientName" 
                                       name="ClientName" 
                                       value="@Model.ClientName"
                                       placeholder="Müşteri adı ve soyadı"
                                       required 
                                       style="border-radius: 12px; border: 2px solid #e2e8f0; padding: 15px 20px; font-size: 16px; transition: all 0.3s ease;" />
                                <div class="invalid-feedback">
                                    Lütfen müşteri adını giriniz.
                                </div>
                            </div>
                        </div>
                        
                        <!-- Şirket Adı -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label for="companyName" class="form-label">
                                    <i class="fas fa-building mr-2 text-info"></i>Şirket Adı
                                </label>
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       id="companyName" 
                                       name="CompanyName" 
                                       value="@Model.CompanyName"
                                       placeholder="Şirket veya kurum adı"
                                       required 
                                       style="border-radius: 12px; border: 2px solid #e2e8f0; padding: 15px 20px; font-size: 16px; transition: all 0.3s ease;" />
                                <div class="invalid-feedback">
                                    Lütfen şirket adını giriniz.
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Yorum -->
                    <div class="mb-4">
                        <div class="form-group">
                            <label for="comment" class="form-label">
                                <i class="fas fa-comment mr-2 text-success"></i>Müşteri Yorumu
                            </label>
                            <textarea class="form-control form-control-lg" 
                                      id="comment" 
                                      name="Comment" 
                                      rows="5" 
                                      placeholder="Müşterinin hizmetiniz hakkındaki yorumu..."
                                      required 
                                      style="border-radius: 12px; border: 2px solid #e2e8f0; padding: 15px 20px; font-size: 16px; resize: vertical; transition: all 0.3s ease;">@Model.Comment</textarea>
                            <div class="invalid-feedback">
                                Lütfen müşteri yorumunu giriniz.
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle mr-1"></i>
                                Müşterinin deneyimini ve memnuniyetini yansıtan detaylı bir yorum yazın.
                            </small>
                        </div>
                    </div>
                    
                    <!-- Görsel URL -->
                    <div class="mb-4">
                        <div class="form-group">
                            <label for="imageUrl" class="form-label">
                                <i class="fas fa-image mr-2 text-warning"></i>Profil Fotoğrafı URL
                            </label>
                            <div class="input-group">
                                <input type="url" 
                                       class="form-control form-control-lg" 
                                       id="imageUrl" 
                                       name="ImageUrl" 
                                       value="@Model.ImageUrl"
                                       placeholder="https://example.com/photo.jpg"
                                       required 
                                       style="border-radius: 12px 0 0 12px; border: 2px solid #e2e8f0; padding: 15px 20px; font-size: 16px; transition: all 0.3s ease;" />
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" style="border-radius: 0 12px 12px 0; border: 2px solid #e2e8f0; border-left: none; padding: 15px 20px;">
                                        <i class="fas fa-link"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="invalid-feedback">
                                Lütfen geçerli bir görsel URL'i giriniz.
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle mr-1"></i>
                                Müşterinin profil fotoğrafının internet adresini giriniz.
                            </small>
                        </div>
                    </div>
                    
                    <!-- Preview Card -->
                    <div class="mb-4">
                        <div class="card" style="border: 2px dashed #e2e8f0; background: #f8fafc;">
                            <div class="card-body text-center p-4">
                                <h6 class="text-muted mb-3">
                                    <i class="fas fa-eye mr-2"></i>Güncellenmiş Önizleme
                                </h6>
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <div class="avatar-preview" style="width: 80px; height: 80px; border-radius: 50%; background: #e2e8f0; display: flex; align-items: center; justify-content: center; margin: 0 auto; overflow: hidden;">
                                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                            {
                                                <img src="@Model.ImageUrl" alt="@Model.ClientName" style="width: 100%; height: 100%; object-fit: cover;" onerror="this.parentElement.innerHTML='<i class=\\'fas fa-user fa-2x text-muted\\'></i>'" />
                                            }
                                            else
                                            {
                                                <i class="fas fa-user fa-2x text-muted"></i>
                                            }
                                        </div>
                                    </div>
                                    <div class="col">
                                        <h6 class="mb-1 text-dark" id="previewName">@Model.ClientName</h6>
                                        <p class="mb-1 text-muted" id="previewCompany">@Model.CompanyName</p>
                                        <p class="mb-0 text-muted small" id="previewComment">@(Model.Comment.Length > 50 ? Model.Comment.Substring(0, 50) + "..." : Model.Comment)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a href="/Testimonial/Index/" class="btn btn-outline-secondary btn-lg px-4 py-2 mr-3" style="border-radius: 12px; font-weight: 600; border: 2px solid #e2e8f0;">
                                <i class="fas fa-times mr-2"></i>İptal
                            </a>
                            <a href="/Testimonial/DeleteTestimonial/@Model.TestimonialID" 
                               class="btn btn-outline-danger btn-lg px-4 py-2" 
                               style="border-radius: 12px; font-weight: 600; border: 2px solid #f56565;"
                               onclick="return confirm('Bu referansı silmek istediğinizden emin misiniz?')">
                                <i class="fas fa-trash mr-2"></i>Sil
                            </a>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg px-5 py-2" style="border-radius: 12px; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                            <i class="fas fa-save mr-2"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #48bb78 0%, #38a169 100%); border: none; border-radius: 16px 16px 0 0;">
                <h5 class="modal-title text-white" id="successModalLabel">
                    <i class="fas fa-check-circle mr-2"></i>Güncelleme Başarılı!
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center p-4">
                <i class="fas fa-edit fa-3x text-success mb-3"></i>
                <h5 class="text-success">Referans Başarıyla Güncellendi!</h5>
                <p class="text-muted">@Model.ClientName referansının bilgileri başarıyla güncellendi.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <a href="/Testimonial/Index/" class="btn btn-success btn-lg px-4 py-2" style="border-radius: 12px; font-weight: 600;">
                    <i class="fas fa-list mr-2"></i>Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Change History -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header" style="background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%); border: none; border-radius: 12px 12px 0 0;">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-history mr-2"></i>Değişiklik Geçmişi
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">Referans Oluşturuldu</h6>
                            <p class="timeline-text">@Model.ClientName referansı sisteme eklendi.</p>
                            <small class="text-muted">Oluşturulma tarihi bilgisi</small>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">Güncelleme Yapıldı</h6>
                            <p class="timeline-text">Referans bilgileri güncellendi.</p>
                            <small class="text-muted">Güncelleme tarihi bilgisi</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        transform: translateY(-2px);
    }
    
    .form-control:hover {
        border-color: #cbd5e0;
        transform: translateY(-1px);
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    
    .avatar-preview {
        transition: all 0.3s ease;
    }
    
    .avatar-preview:hover {
        transform: scale(1.1);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .page-header {
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        z-index: -1;
    }
    
    .timeline {
        position: relative;
        padding: 20px 0;
    }
    
    .timeline-item {
        position: relative;
        padding-left: 40px;
        margin-bottom: 30px;
    }
    
    .timeline-marker {
        position: absolute;
        left: 0;
        top: 0;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 4px solid white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .timeline-content {
        background: #f8fafc;
        padding: 20px;
        border-radius: 12px;
        border-left: 4px solid #667eea;
    }
    
    .timeline-title {
        color: #2d3748;
        margin-bottom: 8px;
        font-weight: 600;
    }
    
    .timeline-text {
        color: #4a5568;
        margin-bottom: 8px;
    }
    
    .alert {
        transition: all 0.3s ease;
    }
    
    .alert:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>

<script>
// Form validation
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                } else {
                    event.preventDefault();
                    $('#successModal').modal('show');
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();

// Live preview
document.getElementById('clientName').addEventListener('input', function() {
    document.getElementById('previewName').textContent = this.value || 'Müşteri Adı';
});

document.getElementById('companyName').addEventListener('input', function() {
    document.getElementById('previewCompany').textContent = this.value || 'Şirket Adı';
});

document.getElementById('comment').addEventListener('input', function() {
    const text = this.value || 'Müşteri yorumu burada görünecek...';
    document.getElementById('previewComment').textContent = text.length > 50 ? text.substring(0, 50) + '...' : text;
});

document.getElementById('imageUrl').addEventListener('input', function() {
    const preview = document.querySelector('.avatar-preview');
    if (this.value) {
        preview.innerHTML = `<img src="${this.value}" alt="Preview" style="width: 100%; height: 100%; object-fit: cover;" onerror="this.parentElement.innerHTML='<i class=\\'fas fa-user fa-2x text-muted\\'></i>'">`;
    } else {
        preview.innerHTML = '<i class="fas fa-user fa-2x text-muted"></i>';
    }
});
</script>

