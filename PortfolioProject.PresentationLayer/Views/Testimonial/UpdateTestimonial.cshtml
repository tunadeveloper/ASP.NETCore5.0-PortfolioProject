@model PortfolioProject.EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<form method="post" class="form-group">
    <br />   <br />   <br />   <br />
    <input type="hidden" name="TestimonialID" value="@Model.TestimonialID" />
    <div class="mb-3">
        <label for="title" class="form-label">Ad Soyad</label>
        <input type="text" class="form-control" id="title" name="ClientName" value="@Model.ClientName" required />
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Şirket Adı</label>
        <input type="text" class="form-control" id="title" name="CompanyName" value="@Model.CompanyName" required />
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Yorum</label>
        <textarea class="form-control" id="description" name="Comment" rows="3" required>@Model.Comment</textarea>
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Görsel URL</label>
        <input type="text" class="form-control" id="title" name="ImageUrl" value="@Model.ImageUrl" required />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

