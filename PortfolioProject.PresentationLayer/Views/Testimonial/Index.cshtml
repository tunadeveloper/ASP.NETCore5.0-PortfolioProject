@model List<PortfolioProject.EntityLayer.Concrete.Testimonial>
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 mb-0 text-white">
                    <i class="fas fa-star mr-3"></i>Referanslar Yönetimi
                </h1>
                <p class="text-white-50 mb-0">Müşteri referanslarınızı yönetin ve düzenleyin</p>
            </div>
            <div class="col-auto">
                <a href="/Testimonial/CreateTestimonial/" class="btn btn-light btn-lg px-4 py-2" style="border-radius: 12px; font-weight: 600;">
                    <i class="fas fa-plus mr-2"></i>Yeni Referans Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <i class="fas fa-users fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Count</h3>
            <p>Toplam Referans</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);">
            <i class="fas fa-check-circle fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Count</h3>
            <p>Aktif Referans</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);">
            <i class="fas fa-building fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Select(x => x.CompanyName).Distinct().Count()</h3>
            <p>Farklı Şirket</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);">
            <i class="fas fa-comments fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Sum(x => x.Comment.Length)</h3>
            <p>Toplam Karakter</p>
        </div>
    </div>
</div>

<!-- Main Content Card -->
<div class="card">
    <div class="card-header" style="background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%); border: none; border-radius: 12px 12px 0 0;">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="mb-0 text-white">
                    <i class="fas fa-list mr-2"></i>Referanslar Listesi
                </h3>
            </div>
            <div class="col-auto">
                <span class="badge badge-light badge-pill px-3 py-2" style="font-size: 14px; font-weight: 600;">
                    @Model.Count Referans
                </span>
            </div>
        </div>
    </div>
    
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-image mr-2"></i>Fotoğraf
                        </th>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-user mr-2"></i>Ad Soyad
                        </th>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-building mr-2"></i>Şirket
                        </th>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-comment mr-2"></i>Yorum
                        </th>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-cogs mr-2"></i>İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="transition: all 0.3s ease;">
                            <td style="padding: 20px;">
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" alt="@item.ClientName" 
                                         style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover; border: 3px solid #e2e8f0; box-shadow: 0 4px 8px rgba(0,0,0,0.1);" />
                                </div>
                            </td>
                            <td style="padding: 20px;">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h6 class="mb-0 font-weight-bold" style="color: #2d3748;">@item.ClientName</h6>
                                        <small class="text-muted">Referans</small>
                                    </div>
                                </div>
                            </td>
                            <td style="padding: 20px;">
                                <span class="badge badge-info badge-pill px-3 py-2" style="font-size: 12px; font-weight: 500; background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);">
                                    @item.CompanyName
                                </span>
                            </td>
                            <td style="padding: 20px;">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <p class="mb-0" style="color: #4a5568; font-size: 14px; line-height: 1.5;">
                                            @(item.Comment.Length >= 50 ? item.Comment.Substring(0, 50) + "..." : item.Comment)
                                        </p>
                                        <small class="text-muted">@item.Comment.Length karakter</small>
                                    </div>
                                </div>
                            </td>
                            <td style="padding: 20px;">
                                <div class="btn-group" role="group">
                                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" 
                                       class="btn btn-success btn-sm mr-2" 
                                       style="border-radius: 8px; padding: 8px 16px; font-weight: 500; transition: all 0.3s ease;">
                                        <i class="fas fa-edit mr-1"></i>Düzenle
                                    </a>
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" 
                                       class="btn btn-danger btn-sm" 
                                       style="border-radius: 8px; padding: 8px 16px; font-weight: 500; transition: all 0.3s ease;"
                                       onclick="return confirm('Bu referansı silmek istediğinizden emin misiniz?')">
                                        <i class="fas fa-trash mr-1"></i>Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Empty State -->
@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-star fa-4x text-muted"></i>
        </div>
        <h4 class="text-muted mb-3">Henüz referans bulunmuyor</h4>
        <p class="text-muted mb-4">İlk referansınızı ekleyerek başlayın</p>
        <a href="/Testimonial/CreateTestimonial/" class="btn btn-primary btn-lg px-4 py-2" style="border-radius: 12px; font-weight: 600;">
            <i class="fas fa-plus mr-2"></i>İlk Referansı Ekle
        </a>
    </div>
}

<style>
    .table tbody tr:hover {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        transform: scale(1.01);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .btn-group .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .badge {
        transition: all 0.3s ease;
    }
    
    .badge:hover {
        transform: scale(1.05);
    }
    
    .page-header {
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        z-index: -1;
    }
</style>