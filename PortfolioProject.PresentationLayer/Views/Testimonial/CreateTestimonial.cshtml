
@{
    ViewData["Title"] = "Yeni Referans Ekle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model PortfolioProject.EntityLayer.Concrete.Testimonial

<!-- Hero Section -->
<div class="hero-section mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px; padding: 40px; color: white;">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1 class="display-4 font-weight-bold mb-3">
                <i class="fas fa-star-circle mr-3"></i>Yeni Referans Ekle
            </h1>
            <p class="lead mb-0">Müşteri memnuniyetini portföyünüze yansıtın ve güvenilirliğinizi artırın</p>
        </div>
        <div class="col-md-4 text-center">
            <div class="hero-icon" style="width: 120px; height: 120px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                <i class="fas fa-user-plus fa-3x"></i>
            </div>
        </div>
    </div>
</div>

<!-- Form Container -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12">
        <div class="form-container" style="background: white; border-radius: 20px; box-shadow: 0 20px 40px rgba(0,0,0,0.1); overflow: hidden;">
            
            <!-- Form Header -->
            <div class="form-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); padding: 30px; color: white;">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-2">
                            <i class="fas fa-clipboard-list mr-2"></i>Referans Bilgileri
                        </h3>
                        <p class="mb-0 opacity-75">Lütfen tüm alanları eksiksiz doldurun</p>
                    </div>
                    <div class="col-auto">
                        <a href="/Testimonial/Index/" class="btn btn-outline-light" style="border-radius: 25px; padding: 10px 25px;">
                            <i class="fas fa-arrow-left mr-2"></i>Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Form Body -->
            <div class="form-body" style="padding: 40px;">
                <form method="post">
                    
                    <!-- Personal Information Section -->
                    <div class="form-section mb-5">
                        <div class="section-header mb-4" style="border-bottom: 3px solid #f093fb; padding-bottom: 15px;">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-user-tie mr-2"></i>Kişisel Bilgiler
                            </h5>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="input-group-custom">
                                    <label for="clientName" class="form-label-custom">
                                        <i class="fas fa-user mr-2 text-info"></i>Müşteri Adı Soyadı
                                    </label>
                                    <input type="text" 
                                           class="form-control-custom" 
                                           id="clientName" 
                                           name="ClientName" 
                                           placeholder="Örn: Ahmet Yılmaz"
                                           required />
                                    <div class="input-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="input-group-custom">
                                    <label for="companyName" class="form-label-custom">
                                        <i class="fas fa-building mr-2 text-success"></i>Şirket/Kurum Adı
                                    </label>
                                    <input type="text" 
                                           class="form-control-custom" 
                                           id="companyName" 
                                           name="CompanyName" 
                                           placeholder="Örn: ABC Teknoloji Ltd."
                                           required />
                                    <div class="input-icon">
                                        <i class="fas fa-building"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Comment Section -->
                    <div class="form-section mb-5">
                        <div class="section-header mb-4" style="border-bottom: 3px solid #f093fb; padding-bottom: 15px;">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-comment-dots mr-2"></i>Müşteri Yorumu
                            </h5>
                        </div>
                        
                        <div class="input-group-custom">
                            <label for="comment" class="form-label-custom">
                                <i class="fas fa-quote-left mr-2 text-warning"></i>Deneyim ve Memnuniyet
                            </label>
                            <textarea class="form-control-custom" 
                                      id="comment" 
                                      name="Comment" 
                                      rows="6" 
                                      placeholder="Müşterinin hizmetiniz hakkındaki detaylı yorumunu buraya yazın..."
                                      required></textarea>
                            <div class="textarea-icon">
                                <i class="fas fa-comment"></i>
                            </div>
                        </div>
                        
                        <div class="form-tips mt-3" style="background: #f8f9fa; border-radius: 15px; padding: 20px;">
                            <h6 class="text-muted mb-3">
                                <i class="fas fa-lightbulb mr-2 text-warning"></i>Yorum Yazma İpuçları
                            </h6>
                            <ul class="tips-list mb-0" style="list-style: none; padding: 0;">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success mr-2"></i>
                                    Müşterinin karşılaştığı sorunu ve nasıl çözüldüğünü belirtin
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success mr-2"></i>
                                    Hizmet kalitesi ve zamanında teslim hakkında bilgi verin
                                </li>
                                <li class="mb-0">
                                    <i class="fas fa-check-circle text-success mr-2"></i>
                                    Müşterinin memnuniyetini ve tavsiye edip etmeyeceğini belirtin
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <!-- Image Section -->
                    <div class="form-section mb-5">
                        <div class="section-header mb-4" style="border-bottom: 3px solid #f093fb; padding-bottom: 15px;">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-image mr-2"></i>Profil Görseli
                            </h5>
                        </div>
                        
                        <div class="input-group-custom">
                            <label for="imageUrl" class="form-label-custom">
                                <i class="fas fa-link mr-2 text-danger"></i>Görsel URL Adresi
                            </label>
                            <div class="url-input-container">
                                <input type="url" 
                                       class="form-control-custom" 
                                       id="imageUrl" 
                                       name="ImageUrl" 
                                       placeholder="https://example.com/photo.jpg"
                                       required />
                                <div class="url-preview" style="margin-top: 15px; text-align: center;">
                                    <div class="avatar-placeholder" style="width: 100px; height: 100px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; color: white;">
                                        <i class="fas fa-user fa-2x"></i>
                                    </div>
                                    <p class="text-muted mt-2 mb-0">Profil Görseli</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="form-actions" style="border-top: 2px solid #e9ecef; padding-top: 30px;">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <a href="/Testimonial/Index/" class="btn btn-outline-secondary btn-lg" style="border-radius: 25px; padding: 12px 30px; border: 2px solid;">
                                    <i class="fas fa-times mr-2"></i>İptal Et
                                </a>
                            </div>
                            <div class="col-md-6 text-md-right">
                                <button type="submit" class="btn btn-primary btn-lg" style="border-radius: 25px; padding: 12px 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);">
                                    <i class="fas fa-save mr-2"></i>Referansı Kaydet
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.hero-section {
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    animation: float 6s ease-in-out infinite;
}

@@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
}

.form-container {
    transition: all 0.3s ease;
}

.form-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 30px 60px rgba(0,0,0,0.15);
}

.form-header {
    position: relative;
    overflow: hidden;
}

.form-header::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    transform: translate(30px, -30px);
}

.form-section {
    transition: all 0.3s ease;
}

.form-section:hover {
    transform: translateX(5px);
}

.section-header h5 {
    font-weight: 600;
    color: #495057;
}

.input-group-custom {
    position: relative;
    margin-bottom: 20px;
}

.form-label-custom {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #495057;
    font-size: 14px;
}

.form-control-custom {
    width: 100%;
    padding: 15px 20px 15px 50px;
    border: 2px solid #e9ecef;
    border-radius: 15px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #f8f9fa;
}

.form-control-custom:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
}

.form-control-custom::placeholder {
    color: #adb5bd;
}

.input-icon {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 18px;
}

.textarea-icon {
    position: absolute;
    left: 15px;
    top: 20px;
    color: #6c757d;
    font-size: 18px;
}

.form-tips {
    border-left: 4px solid #f093fb;
}

.tips-list li {
    font-size: 14px;
    color: #6c757d;
}

.avatar-placeholder {
    transition: all 0.3s ease;
}

.avatar-placeholder:hover {
    transform: scale(1.1);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.form-actions {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    margin: 0 -40px -40px -40px;
    padding: 30px 40px 40px 40px;
}

.btn {
    transition: all 0.3s ease;
    font-weight: 600;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

@@media (max-width: 768px) {
    .hero-section {
        padding: 30px 20px;
    }
    
    .form-body {
        padding: 30px 20px;
    }
    
    .form-actions {
        margin: 0 -20px -30px -20px;
        padding: 30px 20px 30px 20px;
    }
}
</style>



