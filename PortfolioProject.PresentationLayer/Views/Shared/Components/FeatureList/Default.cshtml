@model PortfolioProject.PresentationLayer.Models.FeatureAndSocialMediaViewModel

<header>
    <div class="cover bg-light">
        <div class="container px-3">
            <div class="row">
                <div class="col-lg-6 p-2"><img class="img-fluid" src="/Template/images/illustrations/hello3.svg" alt="hello" /></div>
                <div class="col-lg-6">

                    @foreach(var item in Model.Features){

                    <div class="mt-5">
                        <p class="lead text-uppercase mb-1">@item.Header</p>
                        <h1 class="intro-title marker" data-aos="fade-left" data-aos-delay="50">Ben @item.Name</h1>
                        <p class="lead fw-normal mt-3" data-aos="fade-up" data-aos-delay="100">@item.Title</p>
                          
                               
                            
                        <div class="social-nav" data-aos="fade-up" data-aos-delay="200">
                            <nav role="navigation">
                                <ul class="nav justify-content-left">
                                        @foreach (var socialMedia in Model.SocialMedias)
                                        {
                                    <li class="nav-item"><a class="nav-link" href="@socialMedia.Url" title="@socialMedia.Name"><i class="fab fa-@socialMedia.Icon"></i><span class="menu-title sr-only">@socialMedia.Name</span></a></li>
                                        }
                                    
                                </ul>
                            </nav>
                        </div>
                        <div class="mt-3" data-aos="fade-up" data-aos-delay="200"><a class="btn btn-primary shadow-sm mt-1 hover-effect" href="#contact">İletişime Geç! <i class="fas fa-arrow-right"></i></a></div>
                    </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <div class="wave-bg"></div>
</header>