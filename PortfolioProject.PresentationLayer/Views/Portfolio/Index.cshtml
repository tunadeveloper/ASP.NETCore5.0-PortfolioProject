@model List<PortfolioProject.EntityLayer.Concrete.Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int count = 0;
}



<div class="card-header border-0">
    <h3 class="mb-0">Proje Listesi</h3>
</div>

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Proje Adı</th>
                <th scope="col" class="sort" data-sort="status">1. Görsel</th>
                <th scope="col" class="sort" data-sort="status">2. Görsel</th>
                <th scope="col" class="sort" data-sort="status">Proje URL</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td class="budget">@item.Name</td>
                    <td class="budget"><img src="@item.ImageUrl" alt="Alternate Text" style="width: 50px; height: 50px; border-radius: 50%;" /></td>
                    <td class="budget"><img src="@item.ImageUrl2" alt="Alternate Text" style="width: 50px; height: 50px; border-radius: 50%;" /></td>
                    <td class="budget"> @(item.ProjectUrl.Length > 30 ? item.ProjectUrl.Substring(0, 30) + "..." : item.ProjectUrl)</td>

                    <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioID" class="btn btn-success btn-sm">Güncelle</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a href="/Portfolio/CreatePortfolio/" class="btn btn-info">Proje Ekle</a>
</div>

