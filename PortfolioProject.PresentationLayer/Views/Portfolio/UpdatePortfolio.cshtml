
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
@model PortfolioProject.EntityLayer.Concrete.Portfolio


<form method="post" class="form-group">
    <br />   <br />   <br />   <br />
    <input type="hidden" name="PortfolioID" value="@Model.PortfolioID" />
    <div class="mb-3">
        <label for="title" class="form-label">Proje Adı</label>
        <input type="text" class="form-control" id="title" name="Name" value="@Model.Name" required />
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">1. Görsel URL</label>
        <input type="text" class="form-control" id="title" name="ImageUrl" value="@Model.ImageUrl" required />
        @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">2. Görsel URL</label>
        <input type="text" class="form-control" id="title" name="ImageUrl2" value="@Model.ImageUrl2" required />
        @Html.ValidationMessageFor(m => m.ImageUrl2, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Proje URL</label>
        <input type="text" class="form-control" id="title" name="ProjectUrl" value="@Model.ProjectUrl" required />
        @Html.ValidationMessageFor(m => m.ProjectUrl, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

