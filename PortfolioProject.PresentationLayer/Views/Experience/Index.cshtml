@model List<PortfolioProject.EntityLayer.Concrete.Experience>
@{
    ViewData["Title"] = "Index"; 
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int count = 0;
   
}


<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi</h3>
</div>

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Deneyim Adı</th>
                <th scope="col" class="sort" data-sort="status">Tarih</th>
                <th scope="col" class="sort" data-sort="status">Görsel</th>
                <th scope="col" class="sort" data-sort="status">Açıklama</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <th>@count</th>
                    <td class="budget">@item.Name</td>
                    <td class="budget">@item.Date</td>
                    <td class="budget"><img src="@item.ImageUrl" alt="Alternate Text" style="width: 50px; height: 50px; border-radius: 50%;" /></td>
                    <td class="budget"> @(item.Description.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)</td>

                    <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-success btn-sm">Güncelle</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a href="/Experience/CreateExperience/" class="btn btn-info">Deneyim Ekle</a>
</div>

