
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int count = 0;
}

@model List<PortfolioProject.EntityLayer.Concrete.SocialMedia>


<div class="card-header border-0">
    <h3 class="mb-0">Sosyal Medya Listesi</h3>
</div>

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Sosyal Medya Adı</th>
                <th scope="col" class="sort" data-sort="budget">Ikon</th>
                <th scope="col" class="sort" data-sort="budget">URL</th>
                <th scope="col" class="sort" data-sort="budget">Durum</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td class="budget">@item.Name</td>
                    <td class="budget">@item.Icon</td>
                    <td class="budget">@item.Url</td>
                    <td class="budget @(item.Status ? "text-success" : "text-danger")">
                        @(item.Status ? "Aktif" : "Pasif")
                    </td>
                    <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-success btn-sm">Güncelle</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info">Sosyal Medya Ekle</a>
</div>




