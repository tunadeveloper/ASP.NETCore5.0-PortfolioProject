@model List<PortfolioProject.EntityLayer.Concrete.Service>
@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int count = 0;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 mb-0 text-white">
                    <i class="fas fa-briefcase mr-3"></i>Hizmet Yönetimi
                </h1>
                <p class="text-white-50 mb-0">Sunduğunuz hizmetleri yönetin ve düzenleyin</p>
            </div>
            <div class="col-auto">
                <a href="/Service/CreateService/" class="btn btn-light btn-lg px-4 py-2" style="border-radius: 12px; font-weight: 600;">
                    <i class="fas fa-plus mr-2"></i>Yeni Hizmet Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <i class="fas fa-briefcase fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Count</h3>
            <p>Toplam Hizmet</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);">
            <i class="fas fa-check-circle fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Count</h3>
            <p>Aktif Hizmet</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);">
            <i class="fas fa-image fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Count</h3>
            <p>Hizmet Görseli</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card" style="background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);">
            <i class="fas fa-chart-line fa-2x mb-3" style="opacity: 0.8;"></i>
            <h3>@Model.Sum(x => x.Title?.Length ?? 0)</h3>
            <p>Toplam Karakter</p>
        </div>
    </div>
</div>

<!-- Main Content Card -->
<div class="card">
    <div class="card-header" style="background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%); border: none; border-radius: 12px 12px 0 0;">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="mb-0 text-white">
                    <i class="fas fa-list mr-2"></i>Hizmetler Listesi
                </h3>
            </div>
            <div class="col-auto">
                <span class="badge badge-light badge-pill px-3 py-2" style="font-size: 14px; font-weight: 600;">
                    @Model.Count Hizmet
                </span>
            </div>
        </div>
    </div>
    
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-hashtag mr-2"></i>#
                        </th>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-briefcase mr-2"></i>Hizmet Adı
                        </th>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-image mr-2"></i>Görsel
                        </th>
                        <th style="padding: 20px; font-weight: 600; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-cogs mr-2"></i>İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr style="transition: all 0.3s ease;">
                            <td style="padding: 20px;">
                                <span class="badge badge-primary badge-pill px-3 py-2" style="font-size: 14px; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    @count
                                </span>
                            </td>
                            <td style="padding: 20px;">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h6 class="mb-0 font-weight-bold" style="color: #2d3748;">@item.Title</h6>
                                        <small class="text-muted">Hizmet ID: @item.ServiceID</small>
                                    </div>
                                </div>
                            </td>
                            <td style="padding: 20px;">
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" alt="@item.Title" 
                                         style="width: 60px; height: 60px; border-radius: 12px; object-fit: cover; border: 3px solid #e2e8f0; box-shadow: 0 4px 8px rgba(0,0,0,0.1);" />
                                </div>
                            </td>
                            <td style="padding: 20px;">
                                <div class="btn-group" role="group">
                                    <a href="/Service/UpdateService/@item.ServiceID" 
                                       class="btn btn-success btn-sm mr-2" 
                                       style="border-radius: 8px; padding: 8px 16px; font-weight: 500; transition: all 0.3s ease;">
                                        <i class="fas fa-edit mr-1"></i>Düzenle
                                    </a>
                                    <a href="/Service/DeleteService/@item.ServiceID" 
                                       class="btn btn-danger btn-sm" 
                                       style="border-radius: 8px; padding: 8px 16px; font-weight: 500; transition: all 0.3s ease;"
                                       onclick="return confirm('Bu hizmeti silmek istediğinizden emin misiniz?')">
                                        <i class="fas fa-trash mr-1"></i>Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Empty State -->
@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-briefcase fa-4x text-muted"></i>
        </div>
        <h4 class="text-muted mb-3">Henüz hizmet bulunmuyor</h4>
        <p class="text-muted mb-4">İlk hizmetinizi ekleyerek portföyünüzü oluşturmaya başlayın</p>
        <a href="/Service/CreateService/" class="btn btn-primary btn-lg px-4 py-2" style="border-radius: 12px; font-weight: 600;">
            <i class="fas fa-plus mr-2"></i>İlk Hizmeti Ekle
        </a>
    </div>
}

<style>
    .table tbody tr:hover {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        transform: scale(1.01);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .btn-group .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .badge {
        transition: all 0.3s ease;
    }
    
    .badge:hover {
        transform: scale(1.05);
    }
    
    .page-header {
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        z-index: -1;
    }
    
    .table img {
        transition: all 0.3s ease;
    }
    
    .table img:hover {
        transform: scale(1.2);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        z-index: 10;
    }
</style>



