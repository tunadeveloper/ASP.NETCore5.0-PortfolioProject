@model List<PortfolioProject.EntityLayer.Concrete.Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int count = 0;
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi</h3>
</div>

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Hizmet Adı</th>
                <th scope="col" class="sort" data-sort="budget">Görsel</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td class="budget">@item.Title</td>
                    <td class="budget"><img src="@item.ImageUrl" alt="Alternate Text" style="width: 50px; height: 50px; border-radius: 50%;" /></td>

                    <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success btn-sm">Güncelle</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a href="/Service/CreateService/" class="btn btn-info">Hizmet Ekle</a>
</div>



