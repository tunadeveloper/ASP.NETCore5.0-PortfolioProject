<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h6 class="text-uppercase text-muted ls-1 mb-1">Grafik</h6>
                            <h5 class="h3 mb-0">Yetenek Tablosu</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Chart -->
                    <div class="chart">
                        <canvas id="my-custom-skill-chart"></canvas>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            url: '/Dashboard/SkillChartData',
            type: 'GET',
            success: function (result) {
                const labels = result.map(x => x.title);
                const data = result.map(x => x.value);

                const ctx = document.getElementById('my-custom-skill-chart').getContext('2d');

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Yetenekler',
                            data: data,
                            backgroundColor: [
                                'rgba(0, 123, 255, 0.6)',
                                'rgba(40, 167, 69, 0.6)',
                                'rgba(255, 193, 7, 0.6)',
                                'rgba(220, 53, 69, 0.6)',
                                'rgba(108, 117, 125, 0.6)',
                                'rgba(23, 162, 184, 0.6)'
                            ],
                            borderColor: [
                                'rgba(0, 123, 255, 1)',
                                'rgba(40, 167, 69, 1)',
                                'rgba(255, 193, 7, 1)',
                                'rgba(220, 53, 69, 1)',
                                'rgba(108, 117, 125, 1)',
                                'rgba(23, 162, 184, 1)'
                            ],
                            borderWidth: 1,
                            borderRadius: 8,
                            barThickness: 30
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        layout: {
                            padding: {
                                top: 10,
                                bottom: 10,
                                left: 0,
                                right: 0
                            }
                        },
                        legend: {
                            display: true,
                            labels: {
                                fontColor: '#6c757d',
                                fontSize: 14
                            }
                        },
                        scales: {
                            yAxes: [{
                                gridLines: {
                                    color: 'rgba(0,0,0,0.05)'
                                },
                                ticks: {
                                    beginAtZero: true,
                                    stepSize: 10,
                                    max: 100,
                                    fontColor: '#6c757d',
                                    fontSize: 13
                                }
                            }],
                            xAxes: [{
                                gridLines: {
                                    display: false
                                },
                                ticks: {
                                    fontColor: '#6c757d',
                                    fontSize: 13
                                }
                            }]
                        },
                        animation: {
                            duration: 1000,
                            easing: 'easeOutQuart'
                        },
                        tooltips: {
                            enabled: true,
                            backgroundColor: 'rgba(0,0,0,0.7)',
                            titleFontColor: '#fff',
                            bodyFontColor: '#fff',
                            borderColor: '#ddd',
                            borderWidth: 1
                        }
                    }
                });
            },
            error: function (err) {
                console.log("Hata oluştu:", err);
            }
        });
    });
</script>


