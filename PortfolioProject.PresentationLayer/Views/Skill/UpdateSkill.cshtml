@model PortfolioProject.EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<form method="post" class="form-group">

    <input type="hidden" name="SkillID" value="@Model.SkillID" />
    <br />   <br />   <br />   <br />
    <div class="mb-3">
        <label for="title" class="form-label">Yetenek Başlığı</label>
        <input type="text" class="form-control" id="title" name="Title"value="@Model.Title" placeholder="Örn: C#, JavaScript" required />
    </div>

    <div class="mb-3">
        <label for="value" class="form-label">Değer (%)</label>
        <input type="number" class="form-control" id="value" name="Value" min="0" max="100"value="@Model.Value" placeholder="0-100 arası" required />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

